<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.summer17.yko.kanjimashouapp.KanjiDetailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_kanjiDisplay">

        <TextView
            android:id="@+id/tv_kanjiMeaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:text="Meaning: visit"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_kanjiDisplay"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_kanjiDisplay"
            app:layout_constraintTop_toBottomOf="@+id/tv_kanjiMeaning">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Onyomi:"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/tv_onyomikat1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ホウ"
                    android:layout_weight="4.5" />

                <TextView
                    android:id="@+id/tv_onyomirom1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hou"
                    android:textStyle="italic"
                    android:layout_weight="4.5" />
            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_onyomikat2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="おとずれる"
                    android:layout_weight="1.5" />

                <TextView
                    android:id="@+id/tv_onyomirom2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="otozureru"
                    android:textStyle="italic"
                    android:layout_weight="1.5"/>

            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_onyomikat3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="おとずれる"
                    android:layout_weight="1.5"/>

                <TextView
                    android:id="@+id/tv_onyomirom3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="otozureru"
                    android:textStyle="italic"
                    android:layout_weight="1.5" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kunyomi:"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_kunyomihir1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="おとずれる"
                    android:layout_weight="1.5"/>

                <TextView
                    android:id="@+id/tv_kunyomirom1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="otozureru"
                    android:textStyle="italic"
                    android:layout_weight="1.5" />
            </TableRow>

            <TableRow
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_kunyomihir2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="おとずれる"
                    android:layout_weight="1.5" />

                <TextView
                    android:id="@+id/tv_kunyomirom2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="otozureru"
                    android:textStyle="italic"
                    android:layout_weight="1.5" />

            </TableRow>

            <TableRow
                android:id="@+id/row6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_kunyomihir3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="おとずれる"
                    android:layout_weight="1.5" />

                <TextView
                    android:id="@+id/tv_kunyomirom3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="otozureru"
                    android:textStyle="italic"
                    android:layout_weight="1.5" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/tv_kanjiStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Strokes: 11"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_kanjiDisplay"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_kanjiDisplay"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="訪"
        android:gravity="center"
        android:textSize="85sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="#CCCCCC" />


    <TextView
        android:id="@+id/tv_radical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radical: 訪"
        app:layout_constraintTop_toBottomOf="@+id/tv_kanjiDisplay"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Examples:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_radical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/tv_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example 1 \n\n example 2 \n\n example 3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>
